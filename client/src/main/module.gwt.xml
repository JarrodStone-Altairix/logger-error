<?xml version="1.0" encoding="UTF-8"?>

<!--
  When updating your version of GWT, you should also update this DTD reference,
  so that your app can take advantage of the latest GWT module capabilities.
-->
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.6.0//EN" "http://www.gwtproject.org/doctype/2.8.0/gwt-module.dtd">

<module rename-to='Logger'>

  <!-- Inherit the core Web Toolkit stuff.                        -->
  <inherits name='com.google.gwt.user.User'/>
  
  <!-- Inherit GWT Logging                                        -->
  <inherits name="com.google.gwt.logging.Logging"/>

  <!-- Disable default GWT Logging Handlers that are enabled by default -->
  <set-property name="gwt.logging.developmentModeHandler" value="DISABLED"/>
  <set-property name="gwt.logging.logLevel" value="INFO"/>
  <set-property name="gwt.logging.enabled" value="TRUE"/>
  
  <!-- Inherit Activities and Places.                             -->
  <inherits name='com.google.gwt.activity.Activity'/>
  <inherits name='com.google.gwt.place.Place'/>  

	<!-- Elemental2 -->
	<inherits name='elemental2.core.Core' />
	<inherits name='elemental2.webstorage.WebStorage' />
  
  <!-- Specify the app entry point class.                         -->
  <entry-point class='com.altairix.gwt.client.LoggerAppManager'/>
  
</module>